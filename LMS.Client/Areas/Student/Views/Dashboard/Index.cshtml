@model string
@{
	ViewData["Title"] = "Student Dashboard";
    ViewBag.CardTitle = "Welcome to Your Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person me-2"></i>Profile</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Profile" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-person me-2"></i> My Profile
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Profile" asp-action="ReceivedNotifications" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-bell me-2"></i> Notifications
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Profile" asp-action="Payments" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-credit-card me-2"></i> Payments
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Profile" asp-action="ClassSchedule" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-calendar3 me-2"></i> Class Schedule
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Academics</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Profile" asp-action="ExamResults" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-clipboard-data me-2"></i> Exam Results
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Profile" asp-action="ExamSchedule" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-calendar-check me-2"></i> Exam Schedule
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Assignment" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-task me-2"></i> Assignments
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Quiz" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-card-checklist me-2"></i> My Quizzes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-folder me-2"></i>Resources & Tools</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li>
                            <a asp-controller="Resource" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-file-earmark-text me-2"></i> Course Materials
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-3px);
    }
    
    a:hover {
        color: var(--bs-primary) !important;
    }
    
    .card-header {
        border-bottom: none;
    }
</style>

