@model StudentDetailsViewModel

@{
    ViewBag.Title = "Student Profile";
    ViewBag.CardTitle = "Your Profile";
}

<div class="container mt-4">
    <div class="row">
        <!-- Student Photo -->
        <div class="col-md-4 text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureURL))
            {
                <img src="@Model.ProfilePictureURL" class="img-thumbnail rounded-circle" alt="Student Photo" style="max-width: 200px; max-height: 200px;">
            }
            else
            {
                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 200px; height: 200px; margin: 0 auto;">
                    <i class="bi bi-person fs-1 text-secondary"></i>
                </div>
            }
            <h3 class="mt-3">@Model.FullName</h3>
            <p class="text-muted">@Model.StudentNumber</p>
            <div class="d-flex justify-content-center">
                <div class="form-group mb-3 ">
                    <form asp-action="UploadPhoto" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="file" name="File" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-light mt-2">Upload Photo</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Student Details -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Student Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Date of Birth:</label>
                                <p>@Model.DateOfBirth.ToShortDateString()</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Admission Date:</label>
                                <p>@Model.AdmissionDate.ToShortDateString()</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Gender:</label>
                                <p>@Model.Gender</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Class:</label>
                                <p>Grade @Model.GradeLevel - @Model.ClassNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Address:</label>
                                <p>@Model.Address</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Emergency Contact:</label>
                                <p>@Model.EmergencyContact</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Bus Subscription:</label>
                                <p>
                                    @if (Model.BusSubscription == "Subscribed")
                                    {
                                        <span class="badge bg-success">@Model.BusSubscription</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.BusSubscription</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Back to Home
    </a>
</div>