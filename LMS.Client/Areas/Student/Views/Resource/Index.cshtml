@model List<ResourceItemViewModel>

@{
	ViewData["Title"] = "Student Dashboard";
	ViewBag.CardTitle = "Learning Materials";
}

@if (!Model.Any())
{
	<div class="alert alert-info">No materials found.</div>
}
else
{
	@foreach (var resource in Model)
	{
		<div class="card my-2">
			<div class="card-body">
				<h5>@resource.Title (@resource.ResourceType)</h5>
				<p>Subject: @resource.SubjectName | Teacher: @resource.TeacherName</p>
				<p><small>Uploaded on: @resource.CreatedAt.ToShortDateString()</small></p>
				<a href="@Url.Action("Details", new { resourceId = resource.ResourceId })" class="btn btn-primary">View Details</a>
			</div>
		</div>
	}
}