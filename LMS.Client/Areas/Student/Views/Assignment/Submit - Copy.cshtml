@model LMS.Entities.Models.Submission

@{
    ViewData["Title"] = "Submit Assignment";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Submit" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="FilePath">Attach File</label>
        <input type="file" id="FilePath" name="FilePath" class="form-control" />
        <span asp-validation-for="FilePath" class="text-danger"></span>
    </div>

    <input type="hidden" name="AssignmentId" value="@ViewData["AssignmentId"]" />
    <input type="hidden" name="StudentId" value="@ViewData["StudentId"]" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<!-- Validation summary -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
