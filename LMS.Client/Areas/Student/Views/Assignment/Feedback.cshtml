@model SubmissionFeedbackViewModel

@{
    ViewData["Title"] = "Assignment Feedback";
    ViewBag.CardTitle = $"Feedback for: {Model.AssignmentTitle}";
}

<p><strong>Student:</strong> @Model.StudentFullName</p>
<p><strong>Submitted At:</strong> @Model.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</p>
<p><strong>Score:</strong> @Model.Score</p>

@if (!string.IsNullOrEmpty(Model.FilePath))
{
    <p><strong>Submitted File:</strong> <a href="@Model.FilePath" target="_blank">Download</a></p>
}

@if (!string.IsNullOrWhiteSpace(Model.Feedback))
{
    <div class="alert alert-info mt-3">
        <strong>Teacher Feedback:</strong><br />
        @Model.Feedback
    </div>
}
