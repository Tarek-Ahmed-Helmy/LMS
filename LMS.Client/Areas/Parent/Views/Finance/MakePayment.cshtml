@using LMS.Entities.Models
@model MakePaymentViewModel
@{
    ViewBag.Title = "Make Payment";
}

<h2>Make Payment</h2>

<form asp-action="MakePayment" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students">
            <option value="">Select a student</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="">Select method</option>
            @foreach (var method in Enum.GetValues(typeof(PaymentMethod)))
            {
                <option value="@method">@method</option>
            }
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Receipt"></label>
        <input asp-for="Receipt" type="file" class="form-control" />
        <span asp-validation-for="Receipt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Payment</button>
</form>
