@model CreateResourceViewModel

@{
    ViewData["Title"] = "Resource Upload";
    ViewBag.CardTitle = "Resources Upload";
}

<h2>Upload Resource</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ResourceDescription" class="form-label"></label>
        <textarea asp-for="ResourceDescription" class="form-control"></textarea>
        <span asp-validation-for="ResourceDescription" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubjectId" class="form-label"></label>
        <select asp-for="SubjectId" asp-items="@(new SelectList(ViewBag.Subjects, "SubjectId", "SubjectName"))" class="form-select"></select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ResourceType" class="form-label"></label>
        <select asp-for="ResourceType" asp-items="@(new SelectList(ViewBag.ResourceTypes))" class="form-select"></select>
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ResourceFile" class="form-label"></label>
        <input asp-for="ResourceFile" type="file" class="form-control" />
        <span asp-validation-for="ResourceFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
