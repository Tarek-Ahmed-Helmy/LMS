@model IEnumerable<TeacherStudentListViewModel>
@{
    ViewData["Title"] = "Teacher Student Management";
    ViewBag.CardTitle = "Student Management";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.First().FullName)</th>
                            <th>@Html.DisplayNameFor(m => m.First().StudentNumber)</th>
                            <th>@Html.DisplayNameFor(m => m.First().ClassNumber)</th>
                            <th>@Html.DisplayNameFor(m => m.First().GradeLevel)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.FullName</td>
                                <td>@student.StudentNumber</td>
                                <td>@student.ClassNumber</td>
                                <td>@student.GradeLevel</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-primary btn-sm">View Profile</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No students found for the classes you teach.</p>
            }
        </div>
    </div>
</div>
