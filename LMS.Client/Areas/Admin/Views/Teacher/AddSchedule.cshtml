@model AddScheduleViewModel

@{
    ViewBag.Title = "Add Schedule";
    ViewBag.CardTitle = "Add Schedule";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        </div>
        <form asp-action="AddSchedule" method="post" id="addScheduleForm">
            <div class="modal-body">
                <input type="hidden" asp-for="TeacherId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="DayOfWeek" class="form-label"></label>
                    <select asp-for="DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="form-select">
                        <option value="">-- Select Day --</option>
                    </select>
                    <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StartTime" class="form-label"></label>
                        <input asp-for="StartTime" type="time" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndTime" class="form-label"></label>
                        <input asp-for="EndTime" type="time" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ClassId" class="form-label"></label>
                    <select asp-for="ClassId" asp-items="ViewBag.Class" class="form-select">
                        <option value="">-- Select Class --</option>
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SubjectId" class="form-label"></label>
                    <select asp-for="SubjectId" asp-items="ViewBag.Subject" class="form-select">
                        <option value="">-- Select Subject --</option>
                    </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <a asp-action="Details" asp-route-id="@Model.TeacherId" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Schedule</button>
            </div>
        </form>
    </div>
</div>