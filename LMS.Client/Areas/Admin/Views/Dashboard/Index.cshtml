@{
    ViewData["Title"] = "Admin Dashboard";
    ViewBag.CardTitle = "Welcome to your Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Students Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people-fill me-2"></i>Students</h5>
                    <a asp-controller="Student" asp-action="Index" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalStudents</h3>
                        <p class="text-muted mb-0">Total Students</p>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Student" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Students
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Student" asp-action="Create" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-plus-circle me-2"></i> Add New Student
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Teachers Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Teachers</h5>
                    <a asp-controller="Teacher" asp-action="Index" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalTeachers</h3>
                        <p class="text-muted mb-0">Total Teachers</p>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Teacher" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Teachers
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Teacher" asp-action="Create" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-plus-circle me-2"></i> Add New Teacher
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Parents Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-vcard me-2"></i>Parents</h5>
                    <a asp-controller="Parent" asp-action="Index" class="text-dark"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalParents</h3>
                        <p class="text-muted mb-0">Total Parents</p>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Parent" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Parents
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Parent" asp-action="Create" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-plus-circle me-2"></i> Add New Parent
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Classes Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Classes</h5>
                    <a asp-controller="Academic" asp-action="Classes" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalClasses</h3>
                        <p class="text-muted mb-0">Total Classes</p>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Academic" asp-action="Classes" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Classes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Subjects Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-journal-bookmark me-2"></i>Subjects</h5>
                    <a asp-controller="Academic" asp-action="Subjects" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalSubjects</h3>
                        <p class="text-muted mb-0">Total Subjects</p>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Academic" asp-action="Subjects" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Subjects
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Notifications Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-journal-bookmark me-2"></i>Notifications</h5>
                    <a asp-controller="Notification" asp-action="Index" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Notification" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Notifications
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Notification" asp-action="SendToAll" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-plus-circle me-2"></i> Send Bulk
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-3px);
        }

    a:hover {
        color: var(--bs-primary) !important;
    }

    .card-header {
        border-bottom: none;
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 600;
    }
</style>