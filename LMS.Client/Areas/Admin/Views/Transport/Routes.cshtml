@model IEnumerable<LMS.Web.ViewModels.AdminViewModels.RouteListViewModel>

<h2>Transport Network</h2>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">@TempData["StatusMessage"]</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Route</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Route Name</th>
            <th>Buses</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var route in Model)
        {
            <tr>
                <td>@route.RouteName</td>
                <td>
                    @if (route.Buses.Any())
                    {
                        <ul>
                            @foreach (var bus in route.Buses)
                            {
                                <li>
                                    Driver: @bus.DriverName (Capacity: @bus.Capacity, Students: @bus.StudentCount)
                                    @if (bus.Classes.Any())
                                    {
                                        <ul>
                                            @foreach (var cls in bus.Classes)
                                            {
                                                <li>Grade @cls.GradeLevel - Class @cls.ClassNumber (@cls.StudentCount students)</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No classes assigned.</span>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No buses assigned.</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Buses</a>
</div>