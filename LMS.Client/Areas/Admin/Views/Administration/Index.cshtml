@{
    ViewData["Title"] = "Super Admin Dashboard";
    ViewBag.CardTitle = "Welcome to your Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Roles Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Roles</h5>
                    <a asp-action="ListRoles" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalRoles</h3>
                        <p class="text-muted mb-0">System Roles</p>
                    </div>
                    <ul class="list-unstyled">
                        <li>
                            <a asp-action="ListRoles" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Roles
                            </a>
                        </li>
                        <li>
                            <a asp-action="CreateRole" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-plus-circle me-2"></i> Add New Role
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people-fill me-2"></i>Users</h5>
                    <a asp-action="ListUsers" class="text-white"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h3 class="card-title">@ViewBag.TotalUsers</h3>
                        <p class="text-muted mb-0">System Users</p>
                    </div>
                    <ul class="list-unstyled">
                        <li>
                            <a asp-action="ListUsers" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-list-ul me-2"></i> Manage Users
                            </a>
                        </li>
                        <li>
                            <a asp-action="CreateUser" class="text-decoration-none d-flex align-items-center">
                                <i class="bi bi-plus-circle me-2"></i> Add New User
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Add more cards here if needed -->
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-3px);
        }

    a:hover {
        color: var(--bs-primary) !important;
    }

    .card-header {
        border-bottom: none;
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 600;
    }
</style>