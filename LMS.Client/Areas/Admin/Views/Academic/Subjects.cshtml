@{
    ViewBag.Title = "Subject Management";
    ViewBag.CardTitle = "View Subjects";
}

<a asp-action="AddSubject" class="btn btn-success mb-3">Add New Subject</a>

<table id="subjectsTable" class="table table-hover" width="100%">
    <thead class="text-bold">
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Description</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script>
          $(function() {
              $("#subjectsTable").DataTable({
                  ajax: {
                      url: "@Url.Action("GetSubjectList", "Academic", new { area = "Admin" })",
                      dataSrc: "data"
                  },
                  columns: [
                      { data: "subjectCode" },
                      { data: "subjectName" },
                      { data: "subjectDescription" },
                      {
                          data: "subjectId",
                          orderable: false,
                          className: "text-center",
                          render: function(id) {
                              return `
        <a href="/Admin/Academic/UpdateSubject/${id}"
           class="btn btn-warning btn-sm">Edit</a>
                              `;
                          }
                      }
                  ],
                  order: [[1, "asc"]],
                  responsive: true,
                  autoWidth: true
              });
          });
    </script>
}
