@model NotificationViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    ViewBag.CardTitle = "Notification Details";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.NotificationType</h5>
        <h6 class="card-subtitle mb-2 text-muted">
            From: @Model.SenderName | To: @Model.ReceiverName
        </h6>
        <p class="card-text">@Model.Message</p>
        <p class="card-text">
            <small class="text-muted">
                Sent: @Model.CreatedAt.ToString("g") |
                Status: @(Model.IsRead ? "Read" : "Unread")
            </small>
        </p>

        <a asp-action="Edit" asp-route-id="@Model.NotificationId" class="btn btn-primary">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.NotificationId" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger"
                    onclick="return confirm('Are you sure you want to delete this notification?')">
                Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>